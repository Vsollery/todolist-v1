<%- include('header')-%>

<body>

    <div class="box" id="heading">
        <h1> <%= listTitle %> </h1>
    </div>

    <div class="box">
        <% for(let i = 0; i < newListItem.length; i++){ %>
        <div class="item">
            <input type="checkbox">
            <p><%= newListItem[i] %></p>
        </div>
        <% } %> 
    
        <form class="item" action="/" method="post">
            <input class="input" type="text" name="newItem" placeholder="New Item" autocomplete="off">
            <button class="button" type="submit" name="button" value="<%= listTitle%>">+</button>
        </form>

    </div>

    
</body>

